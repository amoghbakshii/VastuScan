<% layout('layouts/boilerplate') %>

<style>
  .login-wrapper {
    background: white;
    padding: 40px;
    border-radius: 16px;
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    width: 90%;
    max-width: 500px;
    margin: 80px auto;
    font-family: "Poppins", sans-serif;
    text-align: center;
  }

  .google-btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    background-color: #06202B;
    color: #F5EEDD;
    padding: 12px 20px;
    border-radius: 16px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.3s ease;
    margin-top: 20px;
  }

  .google-btn:hover {
    background-color: #F5EEDD;
    color: #06202B;
    border: 1px solid #06202B;
  }

  .card {
    background: #f8f8f8;
    padding: 30px;
    border-radius: 16px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
  }

  .card h2 {
    margin-bottom: 20px;
    color: #06202B;
    font-size: 28px;
    font-weight: 500;
  }
</style>

<!-- Login Page -->
<div class="login-wrapper">
  <div class="card">
    <h2 style="font-weight: 500;">Login to your VastuScan account</h2>
    <a class="google-btn" href="/auth/google">
      <i class="fa-brands fa-google"></i>
      Sign in with Google
    </a>
  </div>
</div>