<% layout('layouts/boilerplate') %>

<style>

    * {
    font-family: 'DM Serif Display', serif;
  }
  
  .edit-card {
    animation: fadeInUp 0.6s ease;
    border-radius: 1rem;
    background: #ffffff;
    padding: 2rem;
    box-shadow: 0 6px 20px rgba(0,0,0,0.1);
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    } to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  h1 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 2rem;
    text-align: center;
  }

  label {
    font-weight: 500;
    font-size: 0.95rem;
  }

  input, textarea {
    border-radius: 0.5rem !important;
    font-size: 0.9rem;
    padding: 0.5rem 0.75rem;
  }

  input:focus, textarea:focus {
    border-color: #007bff;
    box-shadow: 0 0 0 0.15rem rgba(0,123,255,0.25);
  }

  .btn {
    border-radius: 0.5rem;
    font-size: 0.9rem;
    padding: 0.5rem 1.2rem;
  }

  .btn-outline-secondary {
    color: #6c757d;
    border-color: #ced4da;
  }

  .btn-outline-secondary:hover {
    background-color: #f8f9fa;
  }
</style>

<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-7 edit-card">
      <h1>Edit Listing</h1>

      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <form action="/business/edit/<%= business._id %>" method="POST">
        <div class="row">
          <div class="col-md-6 mb-3">
            <label for="name">Business Name</label>
            <input type="text" class="form-control" id="name" name="name" required value="<%= business.name %>">
          </div>

          <div class="col-md-6 mb-3">
            <label for="serviceType">Service Type</label>
            <input type="text" class="form-control" id="serviceType" name="serviceType" required value="<%= business.serviceType %>">
          </div>

          <div class="col-md-6 mb-3">
            <label for="contact">Contact Number</label>
            <input type="text" class="form-control" id="contact" name="contact" required value="<%= business.contact %>">
          </div>

          <div class="col-md-6 mb-3">
            <label for="address">Business Address</label>
            <input type="text" class="form-control" id="address" name="address" required value="<%= business.address %>">
          </div>

          <div class="col-12 mb-4">
            <label for="description">Description</label>
            <textarea class="form-control" id="description" name="description" rows="3"><%= business.description %></textarea>
          </div>
        </div>

        <div class="d-flex justify-content-between">
          <button type="submit" class="btn btn-primary">Update</button>
          <a href="/business/dashboard" class="btn btn-outline-secondary">Cancel</a>
        </div>
      </form>
    </div>
  </div>
</div>