<!-- Google Fonts for DM Sans and Poppins -->
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&family=Poppins:wght@400;500;600;700&display=swap" rel="""stylesheet">

<style>
  /* =========================
     COLOR VARIABLES
  ========================= */
  :root {
    --primary-color: #06202B;
    --secondary-color: #4A90E2;
    --accent-color: #50E3C2;
    --background-light: #F4F7F6;
    --text-color: #333333;
    --white-color: #FFFFFF;
    --border-color: #D8DEE2;
  }

  /* =========================
     BASE STYLES
  ========================= */
  body {
    font-family: 'Poppins', sans-serif;
    background-color: var(--background-light);
  }

  /* =========================
     FORM LAYOUT
  ========================= */
  .form-wrapper {
    display: flex;
    justify-content: center;
    align-items: stretch;
    min-height: 100vh;
    background: linear-gradient(135deg, var(--background-light), var(--white-color));
    padding: 60px 20px;
    gap: 40px;
  }

  /* =========================
     LEFT PANE (INFO)
  ========================= */
  .left-pane {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 50px;
    color: var(--white-color);
    background-image: linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url("https://images.pexels.com/photos/1029611/pexels-photo-1029611.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2");
    background-size: cover;
    background-position: center;
    border-radius: 24px;
    text-align: left;
  }
  .left-pane h1 {
    font-family: 'DM Sans', sans-serif;
    font-size: 42px;
    font-weight: 700;
    margin-bottom: 20px;
    line-height: 1.2;
  }
  .left-pane p {
    font-size: 18px;
    line-height: 1.7;
    max-width: 450px;
  }

  /* =========================
     FORM CARD
  ========================= */
  .form-card {
    background: var(--white-color);
    border-radius: 24px;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.1);
    max-width: 700px;
    width: 100%;
    padding: 50px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .form-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 25px 50px -12px rgba(74, 144, 226, 0.2);
  }
  .form-title {
    font-family: 'DM Sans', sans-serif;
    font-size: 32px;
    font-weight: 700;
    margin-bottom: 30px;
    text-align: center;
    color: var(--primary-color);
  }

  /* =========================
     FORM GROUPS & INPUTS
  ========================= */
  .form-group {
    position: relative;
    margin-bottom: 30px;
  }
  .form-group input,
  .form-group select,
  .form-group textarea {
    width: 100%;
    padding: 16px 14px;
    border: 1px solid var(--border-color);
    border-radius: 12px;
    background-color: var(--white-color);
    font-family: 'Poppins', sans-serif;
    font-size: 16px;
    color: var(--text-color);
    transition: 0.3s ease;
  }
  .form-group label {
    position: absolute;
    top: 16px;
    left: 15px;
    background: var(--white-color);
    color: #999;
    padding: 0 5px;
    font-size: 16px;
    transition: 0.3s ease;
    pointer-events: none;
  }
  /* Floating label effect */
  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    border-color: var(--secondary-color);
    box-shadow: 0 0 0 3px rgba(74, 144, 226, 0.2);
    outline: none;
  }
  .form-group input:focus + label,
  .form-group input:not(:placeholder-shown) + label,
  .form-group textarea:focus + label,
  .form-group textarea:not(:placeholder-shown) + label,
  .form-group select:not([value=""]) + label,
  .form-group.time-group input[type="time"] + label {
    top: -10px;
    left: 10px;
    font-size: 14px;
    color: var(--secondary-color);
  }
  /* Time input group */
  .form-group.time-group {
    display: flex;
    gap: 15px;
  }
  .form-group.time-group > div {
    flex: 1;
    position: relative;
  }
  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  /* =========================
     BUTTONS
  ========================= */
  .submit-btn {
    width: 100%;
    padding: 16px;
    background: #06202B;
    color: var(--white-color);
    font-size: 18px;
    font-weight: 600;
    border: none;
    border-radius: 12px;
    cursor: pointer;
    transition: 0.3s ease;
    letter-spacing: 0.5px;
  }
  .submit-btn:hover {
    background: #3a7ac8;
    transform: translateY(-2px);
    box-shadow: 0 10px 20px -10px rgba(74, 144, 226, 0.5);
  }

  /* =========================
     TIMELINE SECTION
  ========================= */
  .timeline__cover {
    background: var(--primary-color);
    padding: 80px 0;
    color: var(--background-light);
    font-family: 'Poppins', sans-serif;
  }
  .timeline__title {
    max-width: 840px;
    margin: 0 auto;
    text-align: center;
    padding: 0 16px;
  }
  .timeline__title h2 {
    font-family: 'DM Sans', sans-serif;
    font-size: 52px;
    font-weight: 700;
    line-height: 1.2;
    color: var(--accent-color);
    margin-bottom: 12px;
  }
  .timeline {
    padding-top: 40px;
    position: relative;
  }
  .timeline:before {
    content: '';
    position: absolute;
    top: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 2px;
    height: 100%;
    background-color: rgba(255, 255, 255, 0.15);
  }
  .timeline ul {
    padding: 60px 0;
    position: relative;
  }
  .timeline li {
    position: relative;
    margin: 0 auto 60px;
    width: 2px;
    background-color: var(--accent-color);
    list-style-type: none;
  }
  .timeline li:before {
    content: '';
    background: var(--primary-color);
    position: absolute;
    left: 50%;
    top: -28px;
    transform: translateX(-50%);
    width: 20px;
    height: 20px;
    border-radius: 50%;
    border: 3px solid var(--accent-color);
  }
  
  .timeline .content {
    position: relative;
    top: -80px;
    width: 320px;
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    padding: 25px;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: opacity 0.5s, transform 0.5s;
    opacity: 0;
    transform: translateY(20px);
  }
  
  .timeline li.visible .content {
    opacity: 1;
    transform: translateY(0);
  }

  .timeline .badge {
    font-size: 13px;
    text-transform: uppercase;
    color: var(--primary-color);
    background: var(--accent-color);
    display: inline-block;
    padding: 6px 14px;
    border-radius: 20px;
    font-weight: 700;
  }

  .timeline .content h3 {
    font-family: 'DM Sans', sans-serif;
    font-size: 24px;
    font-weight: 600;
    color: var(--white-color);
    margin: 15px 0 10px;
  }

  .timeline .content p {
    color: #E3E3E3;
    font-size: 16px;
    line-height: 1.6;
  }
  
  .timeline li:nth-child(odd) .content { left: 80px; }
  .timeline li:nth-child(even) .content { left: calc(-320px - 80px); }

  /* Multi-Step Form Logic */
  .form-step { display: none; animation: fadeIn 0.5s ease-in-out; }
  .form-step.active { display: block; }
  
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .form-nav {
    display: flex;
    justify-content: space-between;
    gap: 15px;
    margin-top: 30px;
  }

  .form-nav button {
    flex: 1;
    padding: 14px;
    font-weight: 600;
    font-size: 16px;
    border-radius: 12px;
    border: none;
    cursor: pointer;
    transition: 0.3s ease;
  }
  
  .next-btn { background-color: #06202B; color: white; }
  .prev-btn { background-color: var(--border-color); color: var(--text-color); }
  .next-btn:hover { background-color: var(--border-color); color: var(--text-color);transform: translateY(-2px); }
  .prev-btn:hover { background-color: #c7c7c7; transform: translateY(-2px); }

  /* Custom Checkbox/Fieldset Styling */
  .checkbox-group, .fieldset-group {
    border: 1px solid var(--border-color);
    border-radius: 12px;
    padding: 25px 20px 20px 20px;
    margin-top: 10px;
  }
  .checkbox-group legend, .fieldset-group legend {
    font-family: 'DM Sans', sans-serif;
    font-size: 20px;
    font-weight: 600;
    color: var(--primary-color);
    padding: 0 10px;
    margin-left: 5px;
  }
  .options-wrapper {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    padding-top: 10px;
  }
  .checkbox-group label {
    font-size: 16px;
    color: var(--text-color);
    display: flex;
    align-items: center;
    gap: 8px;
    cursor: pointer;
    position: relative; /* remove label floating */
    top: auto;
    left: auto;
    padding: 0;
    transition: none;
  }
  .checkbox-group input[type="checkbox"] {
    width: 1.3em;
    height: 1.3em;
    accent-color: var(--secondary-color);
  }
  .final-step-text {
    text-align: center;
    font-size: 18px;
    line-height: 1.7;
    color: var(--text-color);
    margin-bottom: 30px;
  }
  
  /* Responsive Adjustments */
  @media (max-width: 1200px) {
    .form-wrapper { flex-direction: column; }
    .left-pane { text-align: center; max-width: 100%; }
    .left-pane h1, .left-pane p { max-width: 600px; margin-left: auto; margin-right: auto; }
  }

  @media screen and (max-width: 768px) {
    .timeline:before { left: 20px; }
    .timeline ul { padding-left: 0; }
    .timeline li { margin-left: 20px; }
    .timeline .content { width: calc(100vw - 120px); }
    .timeline li:nth-child(odd) .content,
    .timeline li:nth-child(even) .content {
        left: 45px;
    }
    .form-card, .left-pane { padding: 30px; }
    .form-title { font-size: 28px; }
  }
</style>

