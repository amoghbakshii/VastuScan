<div class="form-wrapper">
  <div class="left-pane">
    <h1>List Your Business with Us.</h1>
    <p>
      Reach thousands of potential clients by showcasing your expertise. It's quick, easy, and totally free. Let’s make your business shine.
    </p>
  </div>

  <form action="/business/list-business" method="POST" class="form-card" autocomplete="off">
    <div class="form-step active">
      <h3 class="form-title" style="font-size: 24px; margin-bottom: 25px;">Step 1: Basic Information</h3>
      <div class="form-group">
        <input type="text" id="name" name="name" required placeholder=" " />
        <label for="name">Business Name</label>
      </div>
      <div class="form-group">
        <input type="text" id="ownerName" name="ownerName" required placeholder=" " />
        <label for="ownerName">Owner's Full Name</label>
      </div>
      <div class="form-group">
        <input type="tel" id="contactPhone" name="contact[phone]" required placeholder=" " />
        <label for="contactPhone">Contact Phone</label>
      </div>
      <div class="form-group">
        <input type="email" id="contactEmail" name="contact[email]" required placeholder=" " />
        <label for="contactEmail">Contact Email</label>
      </div>
      <div class="form-nav">
        <button type="button" class="next-btn">Next</button>
      </div>
    </div>

    <div class="form-step">
      <h3 class="form-title" style="font-size: 24px; margin-bottom: 25px;">Step 2: Business Address</h3>
      <div class="form-group">
        <input type="text" id="houseNo" name="address[houseNo]" required placeholder=" " />
        <label for="houseNo">House/Building No.</label>
      </div>
      <div class="form-group">
        <input type="text" id="area" name="address[area]" required placeholder=" " />
        <label for="area">Area / Locality</label>
      </div>
      <div class="form-group">
        <input type="text" id="road" name="address[road]" required placeholder=" " />
        <label for="road">Road / Street Name</label>
      </div>
      <div class="form-group">
        <input type="text" id="city" name="address[city]" required placeholder=" " />
        <label for="city">City</label>
      </div>
      <div class="form-group">
        <input type="text" id="state" name="address[state]" required placeholder=" " />
        <label for="state">State</label>
      </div>
      <div class="form-group">
        <input type="text" id="pincode" name="address[pincode]" required placeholder=" " />
        <label for="pincode">Pincode</label>
      </div>
      <div class="form-nav">
        <button type="button" class="prev-btn">Previous</button>
        <button type="button" class="next-btn">Next</button>
      </div>
    </div>

    <div class="form-step">
        <h3 class="form-title" style="font-size: 24px; margin-bottom: 25px;">Step 3: Core Service Details</h3>
        <fieldset class="checkbox-group">
            <legend>Service Categories</legend>
            <div class="options-wrapper">
                <label><input type="checkbox" name="serviceCategories" value="Vastu Consultant"> Vastu Consultant</label>
                <label><input type="checkbox" name="serviceCategories" value="Interior Designer"> Interior Designer</label>
                <label><input type="checkbox" name="serviceCategories" value="Architect"> Architect</label>
                <label><input type="checkbox" name="serviceCategories" value="Astrologer"> Astrologer</label>
            </div>
        </fieldset>
        <br>
         <div class="form-group">
            <select id="workType" name="workType" required>
              <option value="" disabled selected hidden></option>
              <option value="Company">Company</option>
              <option value="Full-Time">Full-Time Professional</option>
              <option value="Part-Time">Part-Time Professional</option>
              <option value="Freelancer">Freelancer</option>
            </select>
            <label for="workType">You are a...</label>
        </div>
        <div class="form-group">
            <input type="number" id="yearsInBusiness" name="yearsInBusiness" placeholder=" " />
            <label for="yearsInBusiness">Years in Business</label>
        </div>
        <div class="form-group">
            <textarea id="detailedServices" name="detailedServices" placeholder=" "></textarea>
            <label for="detailedServices">Describe Your Services</label>
        </div>
      <div class="form-nav">
        <button type="button" class="prev-btn">Previous</button>
        <button type="button" class="next-btn">Next</button>
      </div>
    </div>
    
    <div class="form-step">
        <h3 class="form-title" style="font-size: 24px; margin-bottom: 25px;">Step 4: Operational Details</h3>
        <fieldset class="checkbox-group">
            <legend>Working Days</legend>
            <div class="options-wrapper">
                <label><input type="checkbox" name="workingDays" value="Monday"> Mon</label>
                <label><input type="checkbox" name="workingDays" value="Tuesday"> Tue</label>
                <label><input type="checkbox" name="workingDays" value="Wednesday"> Wed</label>
                <label><input type="checkbox" name="workingDays" value="Thursday"> Thu</label>
                <label><input type="checkbox" name="workingDays" value="Friday"> Fri</label>
                <label><input type="checkbox" name="workingDays" value="Saturday"> Sat</label>
                <label><input type="checkbox" name="workingDays" value="Sunday"> Sun</label>
            </div>
        </fieldset>
        <br>
        <div class="form-group time-group">
           <div>
             <input type="time" id="workingHoursStart" name="workingHours[start]" />
             <label for="workingHoursStart">Working Hours Start</label>
           </div>
           <div>
             <input type="time" id="workingHoursEnd" name="workingHours[end]" />
             <label for="workingHoursEnd">Working Hours End</label>
           </div>
        </div>
        <div class="form-group">
            <textarea id="serviceAreas" name="serviceAreas" placeholder=" "></textarea>
            <label for="serviceAreas">Service Areas (e.g., Mumbai, Pune, Online)</label>
        </div>
        <div class="form-group">
             <textarea id="languagesSpoken" name="languagesSpoken" placeholder=" "></textarea>
            <label for="languagesSpoken">Languages Spoken (comma separated)</label>
        </div>
         <div class="form-group">
            <select id="willingToTravel" name="willingToTravel">
              <option value="" disabled selected hidden></option>
              <option value="Yes">Yes, willing to travel</option>
              <option value="Within City">Only within the city</option>
              <option value="No">No, service is remote/at location</option>
            </select>
            <label for="willingToTravel">Willingness to Travel</label>
        </div>
        <fieldset class="checkbox-group">
            <div class="options-wrapper">
                <label><input type="checkbox" name="emergencyServices" value="true"> We offer emergency services</label>
            </div>
        </fieldset>
        <div class="form-nav">
            <button type="button" class="prev-btn">Previous</button>
            <button type="button" class="next-btn">Next</button>
        </div>
    </div>
    
    <div class="form-step">
        <h3 class="form-title" style="font-size: 24px; margin-bottom: 25px;">Step 5: Pricing</h3>
         <div class="form-group">
            <input type="number" id="startingPrice" name="startingPrice" placeholder=" " />
            <label for="startingPrice">Starting Price (INR)</label>
        </div>
        <div class="form-group">
            <select id="priceUnit" name="priceUnit">
              <option value="" disabled selected hidden></option>
              <option value="sqft">Per Square Foot (sqft)</option>
              <option value="hour">Per Hour</option>
              <option value="consultation">Per Consultation</option>
              <option value="project">Per Project</option>
            </select>
            <label for="priceUnit">Price Unit</label>
        </div>
        <fieldset class="checkbox-group">
            <div class="options-wrapper">
                <label><input type="checkbox" name="freeConsultation" value="true"> I offer a free initial consultation</label>
            </div>
        </fieldset>
        <br>
        <fieldset class="fieldset-group">
            <legend>Add a Sample Package</legend>
             <div class="form-group">
                <input type="text" id="packageTitle" name="packages[title]" placeholder=" " />
                <label for="packageTitle">Package Title</label>
            </div>
            <div class="form-group">
                <textarea id="packageDesc" name="packages[description]" placeholder=" "></textarea>
                <label for="packageDesc">Package Description</label>
            </div>
             <div class="form-group">
                <input type="number" id="packagePrice" name="packages[price]" placeholder=" " />
                <label for="packagePrice">Package Price (INR)</label>
            </div>
        </fieldset>
         <div class="form-nav">
            <button type="button" class="prev-btn">Previous</button>
            <button type="button" class="next-btn">Next</button>
        </div>
    </div>
    
    <div class="form-step">
      <h3 class="form-title" style="font-size: 24px; margin-bottom: 25px;">Step 6: Verification Details</h3>
       <fieldset class="fieldset-group">
            <legend>Government Documents</legend>
            <p style="font-size: 14px; color: #666; margin: -10px 0 20px 10px;">For verification purposes only.</p>
            <div class="form-group"><input type="text" id="panCard" name="documents[panCard]" placeholder=" " /><label for="panCard">PAN Card Number</label></div>
            <div class="form-group"><input type="text" id="gstNumber" name="documents[gstNumber]" placeholder=" " /><label for="gstNumber">GST Number (Optional)</label></div>
            <div class="form-group"><input type="text" id="udyamNumber" name="documents[udyamNumber]" placeholder=" " /><label for="udyamNumber">Udyam Number (Optional)</label></div>
            <div class="form-group"><input type="text" id="businessCert" name="documents[businessCert]" placeholder=" " /><label for="businessCert">Business Certificate No. (Optional)</label></div>
            <div class="form-group"><input type="text" id="fssai" name="documents[fssai]" placeholder=" " /><label for="fssai">FSSAI License No. (If applicable)</label></div>
            <div class="form-group"><input type="text" id="aadhaarNo" name="documents[aadhaarNo]" placeholder=" " /><label for="aadhaarNo">Owner's Aadhaar Number</label></div>
        </fieldset>
        <br>
        <fieldset class="fieldset-group">
            <legend>Bank Details</legend>
            <div class="form-group"><input type="text" id="accountHolder" name="documents[bankDetails][accountHolder]" placeholder=" " /><label for="accountHolder">Account Holder Name</label></div>
            <div class="form-group"><input type="text" id="accountNumber" name="documents[bankDetails][accountNumber]" placeholder=" " /><label for="accountNumber">Account Number</label></div>
            <div class="form-group"><input type="text" id="ifsc" name="documents[bankDetails][ifsc]" placeholder=" " /><label for="ifsc">IFSC Code</label></div>
            <div class="form-group"><input type="text" id="upiId" name="documents[bankDetails][upiId]" placeholder=" " /><label for="upiId">UPI ID (Optional)</label></div>
        </fieldset>
      <div class="form-nav">
        <button type="button" class="prev-btn">Previous</button>
        <button type="button" class="next-btn">Next</button>
      </div>
    </div>
    
    <div class="form-step">
      <h3 class="form-title" style="font-size: 24px; margin-bottom: 25px;">Step 7: Final Step</h3>
      <p class="final-step-text">You're almost there!<br>Please confirm your agreement to our terms to complete the listing.</p>
      
        <fieldset class="checkbox-group">
            <legend>Consent</legend>
            <div class="options-wrapper">
                <label><input type="checkbox" name="agreedToTerms" value="true" required> I agree to the Terms of Service.</label>
                <label><input type="checkbox" name="verificationConsent" value="true" required> I consent to the verification of my details.</label>
            </div>
        </fieldset>
        <br>

      <div class="form-group">
        <input type="text" id="digitalSignature" name="digitalSignature" required placeholder=" " />
        <label for="digitalSignature">Type Your Full Name as Digital Signature</label>
      </div>

      <div class="form-nav">
        <button type="button" class="prev-btn">Previous</button>
        <button type="submit" class="submit-btn">Submit Listing</button>
      </div>
    </div>
  </form>
</div>

<script>
  // Form step navigation
  const steps = document.querySelectorAll('.form-step');
  const nextBtns = document.querySelectorAll('.next-btn');
  const prevBtns = document.querySelectorAll('.prev-btn');
  let currentStep = 0;

  function showStep(stepIndex) {
    steps.forEach((step, idx) => {
      step.classList.toggle('active', idx === stepIndex);
    });
  }

  nextBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      if (currentStep < steps.length - 1) {
        currentStep++;
        showStep(currentStep);
        window.scrollTo(0, document.querySelector('.form-wrapper').offsetTop);
      }
    });
  });

  prevBtns.forEach(btn => {
    btn.addEventListener('click', () => {
      if (currentStep > 0) {
        currentStep--;
        showStep(currentStep);
        window.scrollTo(0, document.querySelector('.form-wrapper').offsetTop);
      }
    });
  });

  // Timeline animation observer
  const timelineItems = document.querySelectorAll('.timeline li');
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('visible');
      }
    });
  }, { threshold: 0.5 });

  timelineItems.forEach(item => {
    observer.observe(item);
  });
</script>