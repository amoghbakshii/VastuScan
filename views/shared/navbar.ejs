<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<!-- Bootstrap Bundle JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- Styling -->
<style>
  .navbar {
    background-color: #fff;
    padding-top: 1rem;
    padding-bottom: 1rem;
  }

  .nav-item a {
    color: #06202B;
    font-family: "DM Serif Display", serif;
    font-size: 18px;
    padding: 8px 16px;
    text-decoration: none;
  }

  .login {
    background-color: #06202B;
    border-radius: 30px;
    padding: 6px 18px;
    transition: all 0.3s ease;
  }

  .login:hover {
    background-color: #04404f;
  }

  .nav-link.active {
    font-weight: bold;
    color: #077a7d !important;
    border-bottom: 2px solid #077A7D;
  }

  .user-info {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  @media (max-width: 991.98px) {
    .navbar-nav {
      flex-direction: column;
      align-items: center;
      gap: 12px;
    }

    .nav-item {
      width: 100%;
      text-align: center;
    }

    .nav-item a {
      display: block;
      width: 100%;
    }

    .user-info {
      flex-direction: column;
      gap: 8px;
    }
  }
</style>

<nav class="navbar navbar-expand-lg shadow-sm">
  <div class="container-fluid px-lg-5">
    <a class="navbar-brand fw-bold fs-1" href="/" style="font-family: DM Serif Display, serif; color: #06202B;">VastuScan</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ms-auto mt-2 mb-lg-0 align-items-lg-center">
        <li class="nav-item">
          <a class="nav-link <%= currentPath === '/' ? 'active' : '' %>" href="/">Home</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= currentPath === '/appointment/book' ? 'active' : '' %>" href="/appointment/book">Appointments</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= currentPath === '/customer/showList' ? 'active' : '' %>" href="/customer/showList">Find Experts</a>
        </li>
        <li class="nav-item">
          <a class="nav-link <%= currentPath === '/business/list-business' ? 'active' : '' %>" href="/business/list-business">List Your Business</a>
        </li>

        <% if (typeof user !== 'undefined' && user) { %>
          <li class="nav-item ms-lg-3">
            <div class="user-info">
              <a class="nav-link" href="/dashboard">
                <i class="fa-solid fa-user"></i> &nbsp;<%= user.name %>
              </a>
              <a class="nav-link text-danger" href="/auth/logout" title="Logout">
                <i class="fa-solid fa-right-from-bracket"></i>
              </a>
            </div>
          </li>
        <% } else { %>
          <li class="nav-item ms-lg-3">
            <a class="nav-link login text-white" href="/auth/login" style="font-size: 14px;">
              Login / Signup
            </a>
          </li>
        <% } %>
      </ul>
    </div>
  </div>
</nav>
