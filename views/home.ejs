<% layout('layouts/boilerplate') %>
<style>
  html, body {
    margin: 0;
    padding: 0;
    width: 100vw;
    overflow-x: hidden;
  }

  body {
    font-family: "DM Serif Display", serif;
  }

  .hero-section {
    position: relative;
    height: 90vh;
    width: 100vw;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-section video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    filter: brightness(0.5);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    padding: 0 1.5rem;
    color: #F5EEDD;
    text-align: center;
    max-width: 100%;
  }

  .typewriter h1 {
    overflow: hidden;
    border-right: .15em solid #F5EEDD;
    white-space: nowrap;
    margin: 0 auto;
    font-size: 5rem;
    animation: typing 3.5s steps(40, end) forwards, blink-caret .75s step-end 5;
  }

  .typewriter h1::after {
    content: '';
    animation: caret-hide 0s 5s forwards;
  }

  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  @keyframes blink-caret {
    from, to { border-color: transparent }
    50% { border-color: #F5EEDD; }
  }

  @keyframes caret-hide {
    to { border-right-color: transparent; }
  }

  .hero-subtext {
    font-size: 2rem;
    margin-top: 20px;
    color: #F5EEDD;
    opacity: 0;
    animation: fadeIn 1s ease-in forwards;
    animation-delay: 1s;
  }

  .hero-buttons {
    margin-top: 30px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
  }

  .hero-buttons .btn {
    padding: 10px 20px;
    background-color: #06202B;
    color: #F5EEDD;
    border: none;
    font-family: 'DM Serif Display', serif;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    opacity: 0;
    animation: btnFadeIn 0.8s ease-in-out forwards;
    animation-delay: 2s;
  }

  .hero-buttons .btn:hover {
    color: #06202B;
    background-color: #F5EEDD;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes btnFadeIn {
    from {
      opacity: 0;
      transform: translateY(15px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .how-we-work {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    padding: 80px 40px;
    gap: 40px;
  }

  .how-we-work-title {
    flex: 1;
    display: flex;
    flex-direction: row;
    justify-content: space-evenly;
    align-items: center;
  }

  .how-we-work-title h4 {
    font-size: 60px;
    color: #06202B;
    line-height: 1.2;
    margin-bottom: 20px;
    text-align: center;
  }

  .how-we-work-content {
    flex: 3;
    display: flex;
    gap: 60px;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .how-we-work-section {
    flex: 1;
    min-width: 250px;
  }

  .how-we-work-section h3 {
    font-size: 2rem;
    color: #06202B;
    margin-bottom: 1rem;
    text-align: center;
  }

  .how-we-work-section ul {
    padding-left: 0;
    list-style: none;
    text-align: center;
  }

  .how-we-work-section li {
    font-size: 1.3rem;
    margin-bottom: 15px;
    color: #333;
  }

  .how-we-work-section i {
    margin-right: 8px;
    color: #06202B;
  }

  @media (max-width: 768px) {
    .typewriter h1 {
      font-size: 2.5rem;
    }

    .hero-subtext {
      font-size: 1.2rem;
    }

    .how-we-work {
      padding: 40px 20px;
    }

    .how-we-work-title h4 {
      font-size: 2rem;
    }

    .how-we-work-content {
      flex-direction: column;
      gap: 30px;
    }

    .hero-buttons .btn {
      font-size: 1rem;
    }
  }
</style>

