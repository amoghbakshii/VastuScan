<% layout('layouts/boilerplate') %>
<style>
  body {
    font-family: "DM Serif Display", serif;
    margin: 0;
    padding: 0;
  }

  .hero-section {
    position: relative;
    height: 100vh;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-section video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
    filter: brightness(0.5);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    padding: 0 1.5rem;
    color: #F5EEDD;
    text-align: center;
    max-width: 90%;
  }

  .typewriter h1 {
    overflow: hidden;
    border-right: .15em solid #F5EEDD;
    white-space: nowrap;
    margin: 0 auto;
    animation: typing 3.5s steps(40, end), blink-caret .75s step-end infinite;
    font-size: 5rem;
  }

  @keyframes typing {
    from { width: 0 }
    to { width: 100% }
  }

  @keyframes blink-caret {
    from, to { border-color: transparent }
    50% { border-color: #F5EEDD; }
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .hero-subtext {
    font-size: 2rem;
    margin-top: 20px;
    color: #F5EEDD;
    opacity: 0;
    animation: fadeIn 1s ease-in forwards;
    animation-delay: 3s;
  }

  @keyframes btnFadeIn {
    from {
      opacity: 0;
      transform: translateY(15px) scale(0.95);
    }
    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  .hero-buttons {
    margin-top: 30px;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 15px;
  }

  .hero-buttons .btn {
    padding: 10px 20px;
    background-color: #06202B;
    color: #F5EEDD;
    border: none;
    font-family: 'DM Serif Display', serif;
    box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    opacity: 0;
    animation: btnFadeIn 0.8s ease-in-out forwards;
    animation-delay: 3s;
  }

  .hero-buttons .btn:hover {
    color: #06202B;
    background-color: #F5EEDD;
  }

  /* HOW WE WORK SECTION */
  .how-we-work {
    display: flex;
    padding: 80px 40px;
  }

  .how-we-work-title {
    display: flex;
    flex-direction: column;
    padding-right: 40px;
    justify-content: space-evenly;
  }

  .how-we-work-title h4 {
    font-size: 60px;
    color: #06202B;
    font-family: 'DM Serif Display', serif;
    line-height: 1.2;
    margin: 0;
  }

  .how-we-work-content {
    flex: 3;
    display: flex;
    justify-content: flex-end;
    gap: 60px;
    position: relative;
  }

  .divider-line {
    width: 1px;
    background-color: #ccc;
    height: 100%;
  }

  .how-we-work-section {
    max-width: 400px;
  }

  .how-we-work-section h3 {
    font-size: 2rem;
    font-family: 'DM Serif Display', serif;
    color: #06202B;
    margin-bottom: 1rem;
  }

  .how-we-work-section li {
    color: #333;
    font-size: 1.4rem;
    font-family: 'DM Serif Display', serif;
  }

  @media (max-width: 767px) {
    .typewriter h1 {
      font-size: 2rem;
    }

    .hero-subtext {
      font-size: 1rem;
    }

    .hero-buttons .btn {
      font-size: 1rem;
      padding: 8px 16px;
    }

    

    .how-we-work-title {
      padding-right: 0;
      margin-bottom: 20px;
    }

    .how-we-work-content {
      flex-direction: column;
      align-items: flex-start;
      gap: 40px;
    }

    .divider-line {
      display: none;
    }

    .how-we-work-section ol {
      font-size: 1rem;
    }

    .how-we-work-section h3 {
      font-size: 1.5rem;
    }

    .how-we-work-title h4 {
      font-size: 1.5rem;
    }
  }
</style>

