    <style>
      
  .custom-flash {
  position: absolute;
  top: 20px;
  left: 50%;
  width: 200px;
  background: rgba(6, 32, 43, 0.9);
  color: #F5EEDD;
  padding: 15px 30px;
  border-radius: 10px;
  font-size: 1.2rem;
  box-shadow: rgba(255, 255, 255, 0.15) 0px 5px 15px;
  z-index: 9999;
  animation: fadeInSlide 0.5s ease-in-out;
  margin-left: 50px;
  text-align: center;
}

.flash-close {
  background: none;
  border: none;
  color: #F5EEDD;
  font-size: 1.5rem;
  margin-left: 20px;
  cursor: pointer;
}

@keyframes fadeInSlide {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(-20px);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
  
}

.alert.hide {
  opacity: 0;
  transition: opacity 0.3s ease-out;
}

    </style>
