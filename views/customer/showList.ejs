<% layout('layouts/boilerplate') %>

<style>
  .explore-container {
    max-width: 1200px;
    margin: 50px auto;
    padding: 0 20px;
  }

  .explore-header {
    text-align: center;
    margin-bottom: 30px;
  }

  .explore-header h1 {
    font-family: 'DM Serif Display', serif;
    font-size: 36px;
    color: #06202B;
  }

  .filter-group {
    display: flex;
    justify-content: center;
    margin-top: 20px;
    gap: 15px;
    flex-wrap: wrap;
    align-items: center;
  }

  .filter-input {
    padding: 10px 18px;
    border: 2px solid #06202B;
    border-radius: 12px;
    font-size: 15px;
    min-width: 360px;
    max-width: 520px;
    transition: border-color 0.3s ease;
  }

  .filter-input:focus {
    outline: none;
    border-color: #f5eedd;
    box-shadow: 0 0 5px 2px #f5eedd88;
    background-color: #06202B10;
    color: #06202B;
  }

  .button-filters {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }

  .filter-btn {
    padding: 10px 20px;
    background-color: #06202B;
    color: #F5EEDD;
    border: none;
    border-radius: 30px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    box-shadow: 0 3px 8px rgb(6 32 43 / 0.4);
    transition: all 0.3s ease;
    user-select: none;
    text-transform: capitalize;
  }

  .filter-btn:hover {
    background-color: #f5eedd;
    color: #06202B;
    box-shadow: 0 6px 15px rgb(245 238 221 / 0.7);
    transform: translateY(-3px);
  }

  .filter-btn:active {
    transform: translateY(-1px);
    box-shadow: 0 3px 8px rgb(6 32 43 / 0.6);
  }

  /* Active filter button style */
  .filter-btn.active {
    background-color: #f5eedd;
    color: #06202B;
    box-shadow: 0 6px 15px rgb(245 238 221 / 0.9);
    pointer-events: none;
  }

  .business-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 40px;
  }

  .business-card {
    display: flex;
    flex-direction: row;
    align-items: center;
    background-color: #fff;
    border-radius: 16px;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
    padding: 25px;
    gap: 30px;
    transition: 0.2s ease;
  }

  .business-card:hover {
    transform: translateY(-3px);
  }

  .business-details {
    flex: 1;
  }

  .business-title {
    font-size: 22px;
    font-weight: 700;
    color: #06202B;
    margin-bottom: 6px;
  }

  .business-subtitle {
    font-size: 14px;
    color: #777;
    margin-bottom: 10px;
  }

  .business-description {
    font-size: 14px;
    color: #444;
    margin-bottom: 10px;
  }

  .tags-container {
    margin-bottom: 20px;
  }

  .tag {
    display: inline-block;
    background-color: #06202B;
    color: #F5EEDD;
    padding: 4px 10px;
    border-radius: 12px;
    font-size: 15px;
    margin: 4px 4px 0 0;
  }

  .contact-btn {
    background-color: #F5EEDD;
    color: #06202B;
    padding: 8px 15px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 500;
    transition: 0.3s ease;
  }

  .contact-btn:hover {
    background-color: #06202B;
    color: #F5EEDD;
  }
</style>

<div class="explore-container">
  <div class="explore-header">
    <h1>Find your Vastu Experts on VastuScan</h1>
    <div class="filter-group">
      <input type="text" class="filter-input" id="globalSearch" placeholder="Search using name or address">
      <div class="button-filters">
         <button class="filter-btn" data-filter="all">All</button>
        <button class="filter-btn" data-filter="vastu consultant">Vastu Consultant</button>
        <button class="filter-btn" data-filter="interior designer">Interior Designer</button>
        <button class="filter-btn" data-filter="architect">Architect</button>
        <button class="filter-btn" data-filter="astrologer">Astrologer</button>
      </div>
    </div>
  </div>

  <div class="business-list" id="businessGrid">
    <% businesses.forEach(business => { %>
      <div class="business-card"
           data-name="<%= business.name.toLowerCase() %>"
           data-location="<%= business.address.toLowerCase() %>"
           data-servicetype="<%= business.serviceType.toLowerCase() %>">
        <div class="business-details">
          <div class="business-title"><%= business.name %></div>
          <div class="business-subtitle"><%= business.address %></div>
          <div class="business-description"><%= business.description || "No description provided." %></div>

          <div class="tags-container">
            <span class="tag"><%= business.serviceType %></span>
          </div>

          <a href="tel:<%= business.contact %>" class="contact-btn">Call: <%= business.contact %></a>
        </div>
      </div>
    <% }) %>
  </div>
</div>

<script>
  const globalInput = document.getElementById('globalSearch');
  const cards = document.querySelectorAll('.business-card');
  const filterButtons = document.querySelectorAll('.filter-btn');

  // Function to filter based on search input and button filters
  function filterBusinesses(filter = 'all') {
    const query = globalInput.value.toLowerCase();

    cards.forEach(card => {
      const name = card.dataset.name;
      const location = card.dataset.location;
      const serviceType = card.dataset.servicetype;

      // Check search match (name or location)
      const matchesSearch = name.includes(query) || location.includes(query);
      // Check service type match if filter is not "all"
      const matchesFilter = filter === 'all' || serviceType === filter;

      // Show only if both match
      card.style.display = (matchesSearch && matchesFilter) ? 'flex' : 'none';
    });
  }

  // On typing in search bar
  globalInput.addEventListener('input', () => {
    // When typing, reset filter to 'all' and active button
    filterButtons.forEach(btn => btn.classList.remove('active'));
    document.querySelector('.filter-btn[data-filter="all"]').classList.add('active');
    filterBusinesses('all');
  });

  // Filter buttons event listeners
  filterButtons.forEach(button => {
    button.addEventListener('click', () => {
      const filter = button.dataset.filter.toLowerCase();

      // Clear search input on button click
      globalInput.value = '';

      // Remove active class from all buttons and add to clicked
      filterButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      filterBusinesses(filter);
    });
  });

  // Set default active button on page load (All)
  window.addEventListener('DOMContentLoaded', () => {
    const allBtn = document.querySelector('.filter-btn[data-filter="all"]');
    if(allBtn) allBtn.classList.add('active');
  });
</script>